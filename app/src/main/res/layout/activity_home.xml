<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="32mm"
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/ea" />

            <Button
                android:id="@+id/btnInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2mm"
                android:background="@color/colorPrimaryDark"
                android:text="Perfil"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btnTorneo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2mm"
                android:background="@color/colorPrimaryDark"
                android:text="Generar Torneo"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btnPalmares"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2mm"
                android:background="@color/colorPrimaryDark"
                android:text="Palmares"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2mm"
                android:background="@color/colorPrimaryDark"
                android:text="Registrar Torneo"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/textViewProfile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:text="Profile"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:text="Email"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/providerTextView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:text="Proveedor"
                android:textColor="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSignOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2mm"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:text="Cerrar SesiÃ³n"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>